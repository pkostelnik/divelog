# App Configuration
NEXT_PUBLIC_APP_NAME=DiveLog Studio
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme

# Azure Cosmos DB
AZURE_COSMOS_DB_ENDPOINT=https://localhost:8081
AZURE_COSMOS_DB_KEY=changeme
AZURE_COSMOS_DB_DATABASE=divelog

# Azure Storage
AZURE_STORAGE_ACCOUNT_NAME=changeme
AZURE_STORAGE_ACCOUNT_KEY=changeme
AZURE_STORAGE_MEDIA_CONTAINER=media

# Application Insights
APPLICATION_INSIGHTS_CONNECTION_STRING=changeme

# SEO & Search Engine Verification (optional)
