{
  "$schema": "https://developer.microsoft.com/json-schemas/teams/v1.17/MicrosoftTeams.schema.json",
  "manifestVersion": "1.17",
  "version": "1.0.0",
  "id": "${{TEAMS_APP_ID}}",
  "developer": {
    "name": "DiveLog Studio",
    "websiteUrl": "https://${{APP_DOMAIN}}",
    "privacyUrl": "https://${{APP_DOMAIN}}/datenschutz",
    "termsOfUseUrl": "https://${{APP_DOMAIN}}/impressum"
  },
  "name": {
    "short": "DiveLog Studio",
    "full": "DiveLog Studio - Dive Log & Community Platform"
  },
  "description": {
    "short": "Manage dive logs and connect with divers",
    "full": "Complete dive log management platform with community features, equipment tracking, dive site database, and social networking for divers."
  },
  "icons": {
    "color": "color.png",
    "outline": "outline.png"
  },
  "accentColor": "#0369a1",
  "staticTabs": [
    {
      "entityId": "dashboard",
      "name": "Dashboard",
      "contentUrl": "https://${{APP_DOMAIN}}/dashboard",
      "websiteUrl": "https://${{APP_DOMAIN}}/dashboard",
      "scopes": ["personal"]
    },
    {
      "entityId": "dives",
      "name": "Dive Logs",
      "contentUrl": "https://${{APP_DOMAIN}}/dashboard/dives",
      "websiteUrl": "https://${{APP_DOMAIN}}/dashboard/dives",
      "scopes": ["personal"]
    },
    {
      "entityId": "community",
      "name": "Community",
      "contentUrl": "https://${{APP_DOMAIN}}/dashboard/community",
      "websiteUrl": "https://${{APP_DOMAIN}}/dashboard/community",
      "scopes": ["personal"]
    }
  ],
  "configurableTabs": [
    {
      "configurationUrl": "https://${{APP_DOMAIN}}/dashboard",
      "canUpdateConfiguration": true,
      "scopes": ["team", "groupChat"]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "${{APP_DOMAIN}}"
  ]
}
